<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#040000">

    <TextView
        android:id="@+id/text_rank"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#FDFCFC"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/img_player"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/img_player"
        android:layout_width="80dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toStartOf="@+id/text_score"
        app:layout_constraintStart_toEndOf="@+id/text_rank"
        app:srcCompat="@drawable/player2"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="100"
        android:textColor="#FDFCFC"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/text_name"
        app:layout_constraintStart_toEndOf="@+id/img_player"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="jun"
        android:textColor="#FDFCFC"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/text_date"
        app:layout_constraintStart_toEndOf="@+id/text_score"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="80dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="2022-11-19"
        android:textColor="#FDFCFC"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_name"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>